<div class="mt-4">
    <form method="GET">
        <div class="mb-3">
            <label for="key-word-input" class="form-label">Key word: </label>
            <input type="text" name="q" id="key-word-input" class="form-control" placeholder="Enter key word...">
        </div>
        
        <div class="mb-3">
            <select class="form-select" name="gender" aria-label="Gender">
                <option selected>-- Chose your gender --</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Search</button>
    </form>
</div>